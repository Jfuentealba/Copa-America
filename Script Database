CREATE TABLE T_EVENTO(
    ID INT,
    NOM VARCHAR(40),
    CONSTRAINT PK_TEVENTO_ID PRIMARY KEY (ID)  
	);

CREATE TABLE SANCION(
    ID INT,
    NOM VARCHAR(20),
    CONSTRAINT PK_SANCION_ID PRIMARY KEY (ID)  
	);

CREATE TABLE T_ARBITRO(
    ID INT,
    NOM VARCHAR(40),
    CONSTRAINT PK_TARBITRO_ID PRIMARY KEY (ID)  
	);

CREATE TABLE ARBITRO(
    ID INT,
    NOM VARCHAR(40),
    CONSTRAINT PK_ARBITRO_ID PRIMARY KEY (ID)  
	);

CREATE TABLE ESTADIO(
    ID INT,
    NOM VARCHAR(40),
    CIUDAD VARCHAR(40),
    CONSTRAINT PK_ESTADIO_ID PRIMARY KEY (ID)  
	);

CREATE TABLE FORMACIONES(
    ID INT,
    NCENTRO INT,
    NDEFENSA INT,
    NDELANTERO INT,
    NCUARTO INT,
    CONSTRAINT PK_FORMACIONES_ID PRIMARY KEY (ID)  
	);

CREATE TABLE PAIS(
    ID INT,
    NOM VARCHAR(40),
    CONSTRAINT PK_PAIS_ID PRIMARY KEY(ID)  
    );
	
CREATE TABLE T_JUGADOR(
    ID INT,
    NOM VARCHAR(30),
    CONSTRAINT PK_TJUGADOR_ID PRIMARY KEY(ID)  
	);
	
CREATE TABLE T_PERSONAL(
    ID INT,
    NOM VARCHAR(30),
    CONSTRAINT PK_TPERSONAL_ID PRIMARY KEY (ID)  
	);

CREATE TABLE PERSONAL(
    ID INT,
    NOM VARCHAR(40),
    CONSTRAINT PK_PERSONAL_ID PRIMARY KEY (ID)  
	);

CREATE TABLE SELECCION(
    ID INT,
    ID_P INT,
    CONSTRAINT PK_SELECCION_ID PRIMARY KEY (ID)  ,
    CONSTRAINT FK_SELECCION_IDP FOREIGN KEY (ID_P) REFERENCES PAIS(ID)
	);

CREATE TABLE F_PERSONAL(
    ID INT,
    ID_TP INT,
    ID_P INT,
    ID_S INT,
    CONSTRAINT PK_FPERSONAL_ID PRIMARY KEY (ID)  ,
    CONSTRAINT FK_FPERSONAL_IDTP FOREIGN KEY (ID_TP) REFERENCES T_PERSONAL(ID),
    CONSTRAINT FK_FPERSONAL_IDP FOREIGN KEY (ID_P) REFERENCES PERSONAL(ID),
    CONSTRAINT FK_FPERSONAL_IDS FOREIGN KEY (ID_S) REFERENCES SELECCION(ID)
	);

CREATE TABLE CLUB(
    ID INT,
    NOM VARCHAR(30),
    ID_P INT,
    CONSTRAINT PK_CLUB_ID PRIMARY KEY (ID)  ,
    CONSTRAINT FK_CLUB_IDP FOREIGN KEY (ID_P) REFERENCES PAIS(ID)
	);

CREATE TABLE ESTADO(
    ID INT,
    NOM VARCHAR(30),
    CONSTRAINT PK_ESTADO_ID PRIMARY KEY (ID)
	);

CREATE TABLE JUGADORES(
    ID INT,
    NOM VARCHAR(30),
    ID_S INT,
    ID_TJ INT,
	ID_C INT,
    CONSTRAINT PK_JUGADORES_ID PRIMARY KEY (ID),
    CONSTRAINT FK_JUGADORES_IDS FOREIGN KEY (ID_S) REFERENCES SELECCION(ID),
    CONSTRAINT FK_JUGADORES_IDTJ FOREIGN KEY (ID_TJ) REFERENCES T_JUGADOR(ID),
	CONSTRAINT FK_JUGADORES_ID_C FOREIGN KEY (ID_C) REFERENCES CLUB(ID)
	);

CREATE TABLE PARTIDO(
    ID INT,
    ID_S1 INT,
    ID_S2 INT,
    ID_E INT,
    CONSTRAINT PK_PARTIDO_ID PRIMARY KEY (ID),
    CONSTRAINT FK_PARTIDO_IDS1 FOREIGN KEY (ID_S1) REFERENCES SELECCION(ID),
    CONSTRAINT FK_PARTIDO_IDS2 FOREIGN KEY (ID_S2) REFERENCES SELECCION(ID),
    CONSTRAINT FK_PARTIDO_IDE FOREIGN KEY (ID_E) REFERENCES ESTADIO(ID)
	);
	
CREATE TABLE D_FORMACION(
    ID INT,
    ID_F INT,
    ID_S INT,
    ID_J INT,
    ID_E INT,
    ID_P INT,
    CONSTRAINT PK_DFORMACION_ID PRIMARY KEY (ID)  ,
    CONSTRAINT FK_DFORMACION_IDF FOREIGN KEY (ID_F) REFERENCES FORMACIONES(ID),
    CONSTRAINT FK_DFORMACION_IDS FOREIGN KEY (ID_S) REFERENCES SELECCION(ID),
    CONSTRAINT FK_DFORMACION_IDJ FOREIGN KEY (ID_J) REFERENCES JUGADORES(ID),
    CONSTRAINT FK_DFORMACION_IDE FOREIGN KEY (ID_E) REFERENCES ESTADO(ID),
    CONSTRAINT FK_DFORMACION_IDP FOREIGN KEY (ID_P) REFERENCES PARTIDO(ID)
	);
	
CREATE TABLE F_ARBITRO(
    ID INT,
    ID_A INT,
    ID_TA INT,
    ID_P INT,
    CONSTRAINT PK_FARBITRO_ID PRIMARY KEY (ID)  ,
    CONSTRAINT FK_FARBITRO_IDA FOREIGN KEY (ID_A) REFERENCES ARBITRO(ID),
    CONSTRAINT FK_FARBITRO_IDTA FOREIGN KEY (ID_TA) REFERENCES T_ARBITRO(ID),
    CONSTRAINT FK_FARBITRO_IDP FOREIGN KEY (ID_P) REFERENCES PARTIDO(ID)
	);

CREATE TABLE EVENTOS(
    ID INT,
    ID_P INT,
    ID_J1 INT,
    ID_TE INT,
    ID_S INT,
    MINUTO VARCHAR2(10),
    CONSTRAINT PK_EVENTOS_ID PRIMARY KEY (ID)  ,
    CONSTRAINT FK_EVENTOS_IDP FOREIGN KEY (ID_P) REFERENCES PARTIDO(ID),
    CONSTRAINT FK_EVENTOS_IDJ1 FOREIGN KEY (ID_J1) REFERENCES JUGADORES(ID),
    CONSTRAINT FK_EVENTOS_IDTE FOREIGN KEY (ID_TE) REFERENCES T_EVENTO(ID),
    CONSTRAINT FK_EVENTOS_IDS FOREIGN KEY (ID_S) REFERENCES SANCION(ID)
	);
