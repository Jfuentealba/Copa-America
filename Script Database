CREATE TABLE T_EVENTO(
    ID INT PRIMARY KEY,
    NOM VARCHAR(40),
    CONSTRAINT PK_TEVENTO_ID PRIMARY KEY (ID)
);
CREATE TABLE SANCION(
    ID INT PRIMARY KEY,
    NOM VARCHAR(20),
    CONSTRAINT PK_SANCION_ID PRIMARY KEY (ID)
);
CREATE TABLE T_ARBITRO(
    ID INT PRIMARY KEY,
    NOM VARCHAR(40),
    CONSTRAINT PK_TARBITRO_ID PRIMARY KEY (ID)
);
CREATE TABLE ARBITRO(
    ID INT PRIMARY KEY,
    NOM VARCHAR(40),
    CONSTRAINT PK_ARBITRO_ID PRIMARY KEY (ID)
);
CREATE TABLE ESTADIO(
    ID INT PRIMARY KEY,
    NOM VARCHAR(40),
    CIUDAD VARCHAR(40),
    CONSTRAINT PK_ESTADIO_ID PRIMARY KEY (ID)
);
CREATE TABLE FORMACIONES(
    ID INT PRIMARY KEY,
    NCENTRO INT,
    NDEFENSA INT,
    NDELANTERO INT,
    CONSTRAINT PK_FORMACIONES_ID PRIMARY KEY (ID)
);
CREATE TABLE PAIS(
    ID INT PRIMARY KEY,
    NOM VARCHAR(40),
    CONSTRAINT PK_PAIS_ID PRIMARY KEY (ID)
);
CREATE TABLE T_PERSONAL(
    ID INT PRIMARY KEY,
    NOM VARCHAR(30),
    CONSTRAINT PK_TPERSONAL_ID PRIMARY KEY (ID)
);
CREATE TABLE T_JUGADOR(
    ID INT PRIMARY KEY,
    NOM VARCHAR(30),
    CONSTRAINT PK_TJUGADOR_ID PRIMARY KEY(ID)
);
CREATE TABLE PERSONAL(
    ID INT,
    NOM VARCHAR(40)
);
CREATE TABLE PARTIDO(
    ID INT PRIMARY KEY,
    ID_DS1 INT,
    ID_DS2 INT,
    ID_E INT,
    CONSTRAINT PK_PARTIDO_ID PRIMARY KEY (ID),
    CONSTRAINT FK_PARTIDO_IDS1 FOREIGN KEY (ID_DS1) REFERENCES D_SELECCION(ID),
    CONSTRAINT FK_PARTIDO_IDS2 FOREIGN KEY (ID_DS2) REFERENCES D_SELECCION(ID),
    CONSTRAINT FK_PARTIDO_IDE FOREIGN KEY (ID_E) REFERENCES D_EVENTOS(ID)
);
CREATE TABLE EVENTOS(
    ID INT PRIMARY KEY,
    ID_P INT,
    ID_J1 INT,
    ID_J2 INT,
    ID_A INT,
    ID_TE INT,
    ID_S INT,
    MINUTO DATE,
    CONSTRAINT PK_EVENTOS_ID PRIMARY KEY (ID)
);


CREATE TABLE D_SELECCION(
    ID INT PRIMARY KEY,
    ID_F INT,
    ID_S INT,
    CONSTRAINT PK_DSELECCION_ID PRIMARY KEY (ID),
    CONSTRAINT FK_DSELECCION_IDFORMACION FOREIGN KEY (ID_F) REFERENCES FORMACIONES(ID),
    CONSTRAINT FK_DSELECCION_IDSELECCION FOREIGN KEY (ID_S) REFERENCES SELECCION(ID)
);
CREATE TABLE F_ARBITRO(
    ID INT PRIMARY KEY,
    ID_A INT,
    ID_TA INT,
    ID_P INT,
    CONSTRAINT PK_FARBITRO_ID PRIMARY KEY (ID)
);





CREATE TABLE SELECCION(
    ID INT PRIMARY KEY,
    ID_P INT,
    ID_FP INT,
    CONSTRAINT PK_SELECCION_ID PRIMARY KEY (ID)
);
CREATE TABLE F_PERSONAL(
    ID INT PRIMARY KEY,
    ID_TP INT,
    ID_P INT,
    CONSTRAINT PK_FPERSONAL_ID PRIMARY KEY (ID)
);

CREATE TABLE CLUB(
    ID INT PRIMARY KEY,
    NOM VARCHAR(30),
    ID_P INT,
    CONSTRAINT PK_CLUB_ID PRIMARY KEY (ID)
);
CREATE TABLE JUGADORES(
    ID INT PRIMARY KEY,
    NOM VARCHAR(30),
    ID_S INT,
    ID_J INT,
    CONSTRAINT PK_JUGADORES_ID PRIMARY KEY (ID)
);



